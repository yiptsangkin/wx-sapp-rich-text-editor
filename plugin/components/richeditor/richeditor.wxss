/* plugin/components/richeditor/richeditor.wxss */
input{
  font-size: 28rpx;
  padding: 0 28rpx;
  height: 88rpx;
}

.rich-editor-wrp{
  padding: 0 32rpx;
  padding-bottom: 120rpx;
}

.main-editor-ctl{
  display: flex;
  width: 640rpx;
  margin: 28rpx auto;
  border-radius: 12rpx;
  border: 1rpx solid #81d8cf;
  overflow: hidden;
}

.editor-ctl-item{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #81d8cf;
  background-color: #fff;
  border-left: 1rpx solid #81d8cf;
}

.editor-ctl-item:active{
  color: #fff;
  background-color: #81d8cf;
}

.editor-ctl-item:first-child:active{
  border-left: 1rpx solid #81d8cf;
}

.editor-ctl-item:first-child{
  border-left: 1rpx solid #fff;
}

.common-contain{
  margin: 32rpx 12rpx;
  background-color: #fff;
  box-shadow: 1rpx 5rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.up-ctx{
  overflow: hidden;
}

.common-contain.text-contain .up-ctx {
  padding: 28rpx;
}

.common-contain.video-contain .up-ctx video{
  width: 100%;
}

.common-contain.video-contain .up-ctx{
  height: 450rpx;
}

.common-contain.image-contain{
  text-align: center;
}

.common-contain.image-contain image{
  display: block;
}

.common-contain.video-contain{
  text-align: center;
}

.common-contain .image-desc{
  font-size: 24rpx;
  color: #666;
}

.down-ctx{
  text-align: left;
  font: 28rpx;
  border-top: 1rpx solid #e4e4e4;
}

.op-btn-wrp{
  display: flex;
  border-top: 1rpx solid #e4e4e4;
}

.op-btn-wrp.nt{
  border-top: 0;
}

.op-btn{
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  line-height: 88rpx;
  position: relative;
}

.white-mask{
  width: 100%;
  height: 100%;
  z-index: 3;
  background-color: rgba(255, 255, 255, 0.8);
  position: absolute;
}

.add-img{
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx auto;
}

.add-video{
  width: 140rpx;
  height: 140rpx;
  margin: 140rpx auto;
}

.common-edit-contain{
  font-size: 28rpx;
}

.float-ctl{
  position: absolute;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 1rpx 5rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-top: 18rpx;
  z-index: 9;
}

.float-tri{
  display:block;
  width:0;
  height:0;
  border-width:0 28rpx 28rpx;
  border-style:solid;
  border-color:transparent transparent #fff;/*透明 透明  黄*/
  position:absolute;
  top:-20rpx;
  left:50%;
  margin-left:-28rpx;

}
